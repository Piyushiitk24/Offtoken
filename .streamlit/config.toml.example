# Security Configuration for Streamlit
# Add this to your .streamlit/config.toml file

[server]
# Security headers
enableCORS = false
enableXsrfProtection = true

# File upload limits
maxUploadSize = 200  # MB

[browser]
# Disable telemetry
gatherUsageStats = false

[theme]
# Optional: Custom theme (safe to commit)
primaryColor = "#FF6B6B"
backgroundColor = "#FFFFFF"
secondaryBackgroundColor = "#F0F2F6"
textColor = "#262730"
